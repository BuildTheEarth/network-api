            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": false
          },
          {
            "name": "subRegion",
            "description": "Filter the warps by subregion.",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": false
          },
          {
            "name": "city",
            "description": "Filter the warps by city.",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": false
          }
        ],
        "responses": {
          "400": {
